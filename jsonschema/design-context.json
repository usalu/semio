                "z"
            ],
            "title": "Point",
            "type": "object"
        },
        "PortId": {
            "description": "\ud83e\udeaa The props to identify the port within the parent type.",
            "properties": {
                "id_": {
                    "default": "",
                    "description": "\ud83c\udd94 The id of the port.",
                    "maxLength": 128,
