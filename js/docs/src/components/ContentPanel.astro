---
// ContentPanel.astro - Main component that creates the edgeless layout with floating panels
import Sidebar from './Sidebar.astro';
import PageSidebar from './PageSidebar.astro';
---

<!-- Floating sidebar panels -->
<div id="sidebar-panel" class="floating-panel sidebar-panel">
	<div class="panel-header">
		<span class="panel-title">Navigation</span>
		<button id="sidebar-close" class="panel-close" title="Close sidebar">×</button>
	</div>
	<div class="panel-content">
		<Sidebar />
	</div>
</div>

<div id="page-sidebar-panel" class="floating-panel page-sidebar-panel">
	<div class="panel-header">
		<span class="panel-title">On this page</span>
		<button id="page-sidebar-close" class="panel-close" title="Close page sidebar">×</button>
	</div>
	<div class="panel-content">
		<PageSidebar />
	</div>
</div>

<!-- Panel toggle buttons -->
<div class="panel-toggles">
	<button id="sidebar-toggle" class="toggle-btn active" title="Toggle sidebar">
		<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
			<line x1="9" y1="3" x2="9" y2="21"/>
		</svg>
	</button>
	<button id="page-sidebar-toggle" class="toggle-btn active" title="Toggle page sidebar">
		<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
			<rect x="3" y="3" width="18" height="18" rx="2" ry="2"/>
			<line x1="15" y1="3" x2="15" y2="21"/>
		</svg>
	</button>
</div>

<!-- Render the actual content -->
<div class="content-panel">
	<div class="sl-container"><slot /></div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const sidebarPanel = document.getElementById('sidebar-panel');
    const pageSidebarPanel = document.getElementById('page-sidebar-panel');
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const pageSidebarToggle = document.getElementById('page-sidebar-toggle');
    const sidebarClose = document.getElementById('sidebar-close');
    const pageSidebarClose = document.getElementById('page-sidebar-close');

    // Toggle functions
    const toggleSidebar = () => {
      if (sidebarPanel) {
        const isVisible = !sidebarPanel.classList.contains('hidden');
        sidebarPanel.classList.toggle('hidden');
        sidebarToggle?.classList.toggle('active');
      }
    };

    const togglePageSidebar = () => {
      if (pageSidebarPanel) {
        const isVisible = !pageSidebarPanel.classList.contains('hidden');
        pageSidebarPanel.classList.toggle('hidden');
        pageSidebarToggle?.classList.toggle('active');
      }
    };

    // Event listeners
    sidebarToggle?.addEventListener('click', toggleSidebar);
    pageSidebarToggle?.addEventListener('click', togglePageSidebar);
    sidebarClose?.addEventListener('click', toggleSidebar);
    pageSidebarClose?.addEventListener('click', togglePageSidebar);

    // Hide original Starlight sidebars
    const originalSidebars = document.querySelectorAll('.sidebar, .right-sidebar');
    originalSidebars.forEach(sidebar => {
      (sidebar as HTMLElement).style.display = 'none';
    });

    // Panels are visible by default (no hidden class initially)
  });
</script>

<style>
  /* Floating panels styles similar to design editor */
  .floating-panel {
    position: fixed;
    top: 4rem; /* Below header */
    width: 280px;
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.5rem;
    z-index: 20;
    box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    max-height: calc(100vh - 6rem);
    display: flex;
    flex-direction: column;
  }

  .sidebar-panel {
    left: 1rem;
    bottom: 1rem;
  }

  .page-sidebar-panel {
    right: 1rem;
    bottom: 1rem;
  }

  .floating-panel.hidden {
    display: none;
  }

  .panel-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid var(--sl-color-gray-5);
    background: var(--sl-color-bg-sidebar);
    border-radius: 0.5rem 0.5rem 0 0;
  }

  .panel-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--sl-color-white);
  }

  .panel-close {
    background: none;
    border: none;
    color: var(--sl-color-gray-3);
    cursor: pointer;
    font-size: 1.25rem;
    line-height: 1;
    padding: 0.25rem;
    border-radius: 0.25rem;
  }

  .panel-close:hover {
    color: var(--sl-color-white);
    background: var(--sl-color-gray-5);
  }

  .panel-content {
    flex: 1;
    overflow: auto;
    padding: 1rem;
  }

  /* Panel toggle buttons */
  .panel-toggles {
    position: fixed;
    top: 1rem;
    left: 1rem;
    z-index: 30;
    display: flex;
    gap: 0.5rem;
  }

  .toggle-btn {
    background: var(--sl-color-bg-sidebar);
    border: 1px solid var(--sl-color-gray-5);
    border-radius: 0.25rem;
    padding: 0.5rem;
    cursor: pointer;
    color: var(--sl-color-gray-3);
    transition: all 0.2s;
    box-shadow: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  }

  .toggle-btn:hover {
    color: var(--sl-color-white);
    background: var(--sl-color-gray-5);
  }

  .toggle-btn.active {
    color: var(--sl-color-white);
    background: var(--sl-color-accent);
    border-color: var(--sl-color-accent);
  }

  /* Responsive design - hide floating panels on mobile */
  @media (max-width: 768px) {
    .floating-panel,
    .panel-toggles {
      display: none !important;
    }
  }
</style>

<style>
	@layer starlight.core {
		.content-panel {
			padding: 1.5rem var(--sl-content-pad-x);
			width: 100%;
			max-width: none; /* Remove max-width constraint */
		}
		.content-panel + .content-panel {
			border-top: 1px solid var(--sl-color-hairline);
		}
		.sl-container {
			max-width: var(--sl-content-width);
			margin: 0 auto; /* Center the content */
		}

		.sl-container > :global(* + *) {
			margin-top: 1.5rem;
		}

		@media (min-width: 72rem) {
			.sl-container {
				margin-inline: auto; /* Always center content */
			}
		}
	}
</style>
